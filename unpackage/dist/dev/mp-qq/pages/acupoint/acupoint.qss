.acupoint-view {
  width: 100%;
  height: 300rpx;
}
.acupoint-view .acupoint-item {
  width: calc(100vw - 60rpx);
  height: 80vh;
  background-color: #FFFFFF;
  -webkit-transition: 0.5s ease all;
  transition: 0.5s ease all;
  position: absolute;
  z-index: 10;
  text-align: center;
  -webkit-transform: scale(0.2, 0.2);
          transform: scale(0.2, 0.2);
  -webkit-transform-origin: left top;
          transform-origin: left top;
}
.acupoint-view .acupoint-item .check-view {
  width: 100%;
  height: 50%;
}
.acupoint-view .acupoint-item:nth-child(1) {
  left: 30rpx;
}
.acupoint-view .acupoint-item:nth-child(2) {
  left: calc(((100vw - 150rpx) / 4) + 60rpx);
}
.acupoint-view .acupoint-item:nth-child(3) {
  left: calc(((100vw - 150rpx) / 2) + 90rpx);
}
.acupoint-view .acupoint-item:nth-child(4) {
  left: calc(((100vw - 150rpx) / 4) * 3 + 120rpx);
}
.acupoint-view .float-item {
  -webkit-transform: scale(1, 1);
          transform: scale(1, 1);
  left: 30rpx !important;
  z-index: 15;
}
.acupoint-view .acupoint-item:nth-child(4) {
  margin-right: 0rpx;
}
.acupoint-view .mask {
  position: absolute;
  top: 0rpx;
  bottom: 0rpx;
  left: 0rpx;
  right: 0rpx;
  background-color: rgba(0, 0, 0, 0.2);
  z-index: 13;
}

